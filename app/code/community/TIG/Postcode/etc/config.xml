<config>
    <modules>
        <TIG_Postcode>
            <version>0.1.2</version>
        </TIG_Postcode>
    </modules>

    <global>
        <blocks>
            <tig_postcode>
                <class>TIG_Postcode_Block</class>
            </tig_postcode>
        </blocks>
        <models>
            <tig_postcode>
                <class>TIG_Postcode_Model</class>
            </tig_postcode>
        </models>
        <helpers>
            <tig_postcode>
                <class>TIG_Postcode_Helper</class>
            </tig_postcode>
        </helpers>
    </global>

    <frontend>
        <layout>
          <updates>
            <tig_postcode>
                <file>TIG/postcode.xml</file>
            </tig_postcode>
          </updates>
        </layout>
        <routers>
            <tig_postcode>
                <use>standard</use>
                <args>
                    <module>TIG_Postcode</module>
                    <frontName>tig_postcode</frontName>
                </args>
            </tig_postcode>
        </routers>
        <translate>
            <modules>
                <TIG_Postcode>
                    <files>
                        <default>TIG_Postcode.csv</default>
                    </files>
                </TIG_Postcode>
            </modules>
        </translate>
    </frontend>

    <default>
        <tig_postcode>
            <settings>
            </settings>
        </tig_postcode>
    </default>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <tig_postcode>
                                            <title>TIG Postcode Check</title>
                                        </tig_postcode>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <TIG_Postcode>
                    <files>
                        <default>TIG_Postcode.csv</default>
                    </files>
                </TIG_Postcode>
            </modules>
        </translate>
    </adminhtml>

</config>